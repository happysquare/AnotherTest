<h1>Log in</h1>
<%= form_for( :session, :url => sessions_path ) do |f| %>
	
	<div class = "field">
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</div>
	<div class = "field">
		<%= f.label :password %><br/>
		<%= f.password_field :password %>
	</div>
	<div class="actions">
		<%= f.submit "log in" %>
	</div>
	New user? <%= link_to "sign up now!", signup_path %>
<% end %>
