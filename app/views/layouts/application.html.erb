<!DOCTYPE html>
<html>
	<head>
	
	  <title><%=title %></title>
		<%= csrf_meta_tag %>
		<%= render 'layouts/styles' %>
		
		<%= javascript_include_tag :defaults %>
		
	</head>
	<body>
		<div class="container">
			
			<%= render 'layouts/header' %>
			<% if flash.any? %>
				<section class="round">
					<% flash.each do |k,v|%>
						<div class ="flash <%= k%>"><%=v%></div>
					<%end%>
				</section>
			<%end%>
			<section class="round">
				
				<%= yield %>
			</section>
			
			<%= render('layouts/footer')%>
			
			<%= debug(params) if Rails.env.development? %>
		</div>
	</body>
</html>
